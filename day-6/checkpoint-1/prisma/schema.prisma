generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("user")
  profile   Profile? // One-to-one relation
}

model Profile {
  id        Int    @id @default(autoincrement())
  profile   String // URL atau nama file profile picture
  userId    Int    @unique // Harus unique untuk one-to-one
  user      User   @relation(fields: [userId], references: [id])

}